generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Medicine {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String   @unique
  uses         String
  dosage       String
  sideEffects  String
  prohibited   String
  warnings     String
}

model Disease {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String   @unique
  recommended  String   // Comma-separated medicine names for simplicity
  precautions  String
}
